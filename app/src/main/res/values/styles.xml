<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>

    </style>

    <style name="wrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="categoryTitleWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/medievalsharp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        
    </style>
    <style name="editTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/editTexHeight</item>
        <item name="android:textSize">@dimen/editTextSize</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:layout_marginLeft">@dimen/editTextMarginLeft</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/spinnerHeight</item>
        <item name="android:textSize">@dimen/spinnerTextSize</item>
        <item name="android:layout_marginBottom">@dimen/spinnerMarginBottom</item>
        <item name="android:layout_marginLeft">@dimen/spinnerMarginLeft</item>
        <item name="android:gravity">left|center_horizontal</item>
    </style>

    <style name="Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/marginTopBorder</item>
        <item name="android:layout_marginLeft">@dimen/marginSideBorder</item>
        <item name="android:layout_marginRight">@dimen/marginSideBorder</item>
    </style>
    <style name="categories">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/marginTopSpinnerBox</item>
        <item name="android:layout_marginLeft">@dimen/marginSideBorder</item>
        <item name="android:layout_marginRight">@dimen/marginSideBorder</item>
    </style>

    <style name="imageStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_marginTop">@dimen/marginTopBorder</item>
        <item name="android:maxHeight">@dimen/maxImageHeight</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="introText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/marginTopBorder</item>
        <item name="android:textSize">@dimen/introTextSize</item>
        <item name="android:layout_marginLeft">@dimen/marginSideBorder</item>
        <item name="android:layout_marginRight">@dimen/marginSideBorder</item>

    </style>
    <style name="categoryIntroText">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxWidth">400dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_marginTop">@dimen/marginTopBorder</item>
        <item name="android:textSize">@dimen/introTextSize</item>
        <item name="android:layout_marginLeft">@dimen/marginSideBorder</item>
        <item name="android:layout_marginRight">@dimen/marginSideBorder</item>
        <item name="android:layout_below">@id/categoryImage</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>
    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/marginTopBorder</item>
    </style>

    <style name="categoryWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="categoryImageStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_marginTop">@dimen/marginTopBorder</item>
        <item name="android:maxHeight">@dimen/maxCategoryImageHeight</item>
        <item name="android:layout_centerHorizontal">true</item>>
    </style>
    <style name="categoryIconStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_marginTop">@dimen/iconMargin</item>
        <item name="android:layout_marginBottom">@dimen/iconMargin</item>
        <item name="android:maxHeight">@dimen/maxCategoryImageHeight</item>
        <item name="android:layout_below">@id/categoryIntro</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="questionBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:shape">rectangle</item>
        <item name="android:layout_marginTop">@dimen/questionBoxMargin</item>
        <item name="android:layout_marginBottom">@dimen/questionBoxMargin</item>
        <item name="android:layout_marginLeft">@dimen/marginSideBorder</item>
        <item name="android:layout_marginRight">@dimen/marginSideBorder</item>
    </style>

    <style name="questionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:paddingLeft">@dimen/questionPadding</item>
        <item name="android:paddingRight">@dimen/questionPadding</item>
    </style>
    <style name="radioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/marginTopBorder</item>
    </style>
    <style name="radioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="viewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/viewSize</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="editTextAnswerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="checkBoxContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="CheckboxColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/checkboxMargin</item>
        <item name="android:layout_marginLeft">@dimen/checkboxMargin</item>
    </style>
    <style name="checkBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
</resources>
